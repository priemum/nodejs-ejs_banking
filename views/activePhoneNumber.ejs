<%- include ('header',{title:'Home - Transfer Money'}); %>

<div class="update-phonenumber">
    <div class="container">
        <div class="update-phonenumber-content h-80 full-width p-relative">
            <div class="modal">
                <form action="" method="post">
                    <div class="form-group">
                        <label for="txtPhoneNumber text-color">Enter your code</label>
                        <input type="text" name="txtPhoneCode" id="txtPhoneCode">
                    </div>
                    <div class="form-group">
                        <% if(errors.length > 0){%>
                        <%errors.forEach(item=>{%>
                        <p class="mb-10 red"> <%-`* ${item.msg}`%> </p>
                        <%})%>
                        <%}%>
                    </div>
                    <div class="form-actions">
                        <a href=""><button type="submit" class="btn white t-capitalize">Confirm</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<%- include ('footer'); %></div>