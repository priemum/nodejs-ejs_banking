<%- include ('../header',{title:'Payyed - Change Password'}); %>
<div class="container" style="height: 100vh;">
    <div class="modal" >
        <form action="" method="post">
            <div class="title">
                <h3 style="margin: 0  0 20px; font-size: 18px;text-align: center;color: #333;font-weight: 400; margin-bottom: 30px;">
                    Change Password</h3>
            </div>
            <div class="form-group">
                <label for="">Old Password</label>
                <input type="password" name="oldPassword">
            </div>
            <div class="form-group">
                <label for="">New Password</label>
                <input type="password" name="newPassword">
            </div>
            <div class="form-group">
                <label for="">Confirm New Password</label>
                <input type="password" name="confirmPassword">
            </div>
            <div class="form-group">
                <% if(errors || errors.length){ %>
                <% errors.forEach(item=>{%>
                <%- `<p style="color:red; margin-bottom:10px">* ${item.msg}</p>`  %>
                <%})%>
                <%}%>
            </div>
            <div class="form-actions">
                <a href=""><button class="btn" type="submit" style="width:  100%; color:white;">Change Password</button></a>
            </div>
        </form>
    </div>
</div>
<%- include ('../footer'); %>