<%- include ('header',{title:'Payyed - Home'}); %>

<div class="container" style="height: 100vh;">
    <div class="modal">
        <div class="modal-title">
            <span>
                <i class="far fa-envelope"></i>
            </span>
            <h3
                style="margin: 0  0 20px; font-size: 32px;color: #222;font-weight: 400; font-size: 18px; text-align: center;">
                Update Email</h3>
        </div>
        <form action="" method="post">
            <div class="form-group">
                <label for="txtEmail">Email Address</label>
                <input type="email" required placeholder="Enter Your Email" name="txtEmail" id="txtEmail">
            </div>
            <div class="form-group">
                <% if(errors || errors.length){ %>
                <% errors.forEach(item=>{%>
                <%- `<p>* ${item.msg}</p>`  %>
                <%})%>
                <%}%>
            </div>
            <div class="form-actions">
               
                <input type="submit" value="Send code">

              
            </div>
        </form>

       
    </div>
</div>
<%- include ('footer'); %>