
<%- include ('header',{title:'Payyed - Activity'}); %>

    <div class="container">
        <div class="text-center title-history ">LỊCH SỬ GIAO DỊCH</div>
        <div class="mar-35"></div>
        <div class="main-content">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#">Tài khoản</a></li>
                <li><a href="#">Thẻ</a></li>
            </ul>
            <div class="mar-35"></div>
            <select class="mdb-select md-form">
                <option value="" disabled selected><%-accountInfo.STK%> - <%-displayName%> - Số dư :<%-accountInfo.balance%> USD</option>
                <option value="1">Thông tin tài khoản 2</option>
                <option value="2">Thông tin tài khoản 3 </option>
            </select>
            <div class="mar-35"></div>
            <div class="surplus-main grid">
                <div class="surplus"> Số dư hiện tại <br> <%-accountInfo.balance%> USD </div>
                <div class="surplus"> Số dư khả dụng <br>  <%-accountInfo.balance%> USD </div>
            </div>
            <div class="accordion-wrapper">
                <div class="text-center title-history ">Thông tin tài khoản </div>
                <div class="accordion-body" id="acctdetail">
                    <div class="account-info-wrapper grid">
                        <div class="account-info-col account-details-status">
                            <div class="0" id="statusDetails">
                                <div class="account-info-label">Trạng thái tài khoản
                                </div>
                                <div class="account-info-controls">Hoạt động
                                </div>
                            </div>
                        </div>
                        <div class="account-info-col" id="accountOrCardNameDetails">
                            <div class="account-info-label">Tên chủ tài khoản
                            </div>
                            <div class="account-info-controls">
                                Trương Huy Hoàng
                            </div>
                        </div>
                        <div class="account-info-col" id="accountNumDetails">
                            <div class="account-info-label">Số tài khoản
                            </div>
                            <div class="account-info-controls">104868743055
                            </div>
                        </div>
                        <div class="account-info-col" id="accountTypeDetails">
                            <div class="account-info-label">Loại tài khoản
                            </div>
                            <div class="account-info-controls">Tiền gửi thanh toán
                            </div>
                        </div>
                        <div class="account-info-col" id="branchDetails">
                            <div class="account-info-label">Chi nhánh
                            </div>
                            <div class="account-info-controls">CN TP HCM - HOI SO
                            </div>
                        </div>
                        <div class="account-info-col" id="issueDateDetails">
                            <div class="account-info-label">Ngày mở tài khoản
                            </div>
                            <div class="account-info-controls">01/08/2018
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mar-35"></div>
        <fieldset class="fieldset" id="search-transactions">
            <legend class="legend">Tìm kiếm giao dịch</legend>
            <div class="search-wrapper" id="search-wrapper">
                <div class="basic-search accounts grid" id="basic-search">
                    <div class="form-group searchform cf">
                        <label for="txtCustomer">Nội dung chuyển khoản</label>
                        <input type="text" class="text-center" required="" placeholder="Nội dung  ">
                        <input type="submit" value="Tìm kiếm ">
                    </div>
                    <div class="form-group searchform cf">
                        <label for="txtCustomer">Thời gian giao dịch</label>
                        <input type="text" class="text-center" required="" placeholder="Thời gian  ">
                        <input type="submit" value="Tìm kiếm ">
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="mar-100"></div>
        <div class="">
            <% if(htrTransfer){%>
        <table class="table table-searchform container">
            <thead>
                <tr>
                    <th scope="col">Ngày</th>
                    <th scope="col">Loai giao dịch</th>
                    <th scope="col">Nội dung</th>
                    <th scope="col">Số tiền</th>
                    <th scope="col">Số dư</th>  
                </tr>
            </thead>
            <tbody>
                <% htrTransfer.forEach(item=>{%>
                    <tr>
                        <td><%-new Date(item.date).toLocaleDateString("en-US") %> </td>
                        <td><%-item.from == id ? " Chuyển tiền " : " Nhận tiền "%></td>
                        <td><%-item.message%></td>
                        <td><%-item.amount%> (Chua cap nhat) </td>
                        <td> <%-accountInfo.balance%></td> 
                    </tr>
                     <% })%>
            </tbody>
          </table>
          <%  }else{ %>
            <center>
                <h3>User nay chua tung chuyen tien</h3>
            </center>
            <%} %>
        </div>
        <div class="mar-100"></div>

  <%- include ('footer');%> 
